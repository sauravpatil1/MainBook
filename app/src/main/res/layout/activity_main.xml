<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_bal"
        android:layout_margin="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
         />
    <TextView
        android:id="@+id/baltoshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bal_to_show"
        android:layout_marginLeft="25dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_give_to"
            android:onClick="onClickGive"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_take_from"
            android:onClick="onClickTake"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/create_costumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddCostumer"
        android:layout_margin="20dp"
        android:onClick="onClickCreateNew"
        />

    <ListView
        android:id="@+id/contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>